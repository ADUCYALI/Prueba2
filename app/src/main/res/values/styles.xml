<resources>

    <!-- Base theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:buttonStyle">@style/ButtonBlueBackground</item>
        <item name="android:actionMenuTextColor">@color/blue</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextAppearance</item>
    </style>


    <!--Menu-->
    <style name="MenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>


    <!--Button-->
    <style name="ButtonTextFontRegular" parent="AppTheme">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ButtonTextFontMedium" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="ButtonBlueBackground" parent="@style/Widget.AppCompat.Button">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>


    <!--Toolbar-->
    <style name="ToolbarWhite">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ToolbarTextTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>


    <!--Text-->
    <style name="TextBlack" parent="AppTheme">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextGray" parent="AppTheme">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="TextBlue" parent="AppTheme">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blue_dark</item>
    </style>

    <style name="TabLayoutText" parent="TextAppearance.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>


    <!--Text Input - Edit Text-->
    <style name="EditTextStyle" parent="AppTheme">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">14dp</item>
        <item name="android:textColorHint">@color/gray_dark</item>
    </style>

    <style name="TextInputStyle" parent="AppTheme">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="colorControlNormal">@color/gray_bubble</item>
        <item name="colorControlActivated">@color/gray_bubble</item>
        <item name="colorControlHighlight">@color/gray_bubble</item>
        <item name="android:textColorHint">@color/gray_bubble</item>
    </style>


    <!--Divider-->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray</item>
    </style>

</resources>
