<resources>

    <!-- Base theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:buttonStyle">@style/ButtonBlueStyle</item>
    </style>

    <style name="EditTextStyle" parent="AppTheme">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">14dp</item>
        <item name="android:textColorHint">@color/gray_dark</item>
    </style>

    <style name="ButtonBlueStyle" parent="@style/Widget.AppCompat.Button">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="BottomTextGray" parent="AppTheme">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="BottomTextBlack" parent="AppTheme">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomTextBlue" parent="AppTheme">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blue_dark</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextInputStyle" parent="AppTheme">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="colorControlNormal">@color/gray_bubble</item>
        <item name="colorControlActivated">@color/gray_bubble</item>
        <item name="colorControlHighlight">@color/gray_bubble</item>
        <item name="android:textColorHint">@color/gray_bubble</item>
    </style>

    <style name="TextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

</resources>
