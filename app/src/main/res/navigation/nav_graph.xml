<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/navigation_feed">

    <fragment
        android:id="@+id/destination_welcome"
        android:name="com.meazza.instagram.ui.auth.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/goto_sign_up"
            app:destination="@id/destination_sign_up" />
        <action
            android:id="@+id/goto_log_in"
            app:destination="@id/destination_login" />
    </fragment>

    <action
        android:id="@+id/action_global_welcome"
        app:destination="@id/destination_welcome"
        app:launchSingleTop="false"
        app:popUpTo="@+id/nav_graph"
        app:popUpToInclusive="true" />

    <fragment
        android:id="@+id/destination_sign_up"
        android:name="com.meazza.instagram.ui.auth.sign_up.SignUpFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/goto_log_in"
            app:destination="@id/destination_login" />
        <action
            android:id="@+id/goto_feed"
            app:destination="@id/navigation_feed"
            app:popUpTo="@id/nav_main"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/destination_login"
        android:name="com.meazza.instagram.ui.auth.log_in.LogInFragment"
        android:label="fragment_log_in"
        tools:layout="@layout/fragment_log_in">
        <action
            android:id="@+id/goto_sign_up"
            app:destination="@id/destination_sign_up" />
        <action
            android:id="@+id/goto_reset_password"
            app:destination="@id/destination_reset_password" />
        <action
            android:id="@+id/goto_feed"
            app:destination="@id/navigation_feed"
            app:popUpTo="@id/nav_main"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/destination_reset_password"
        android:name="com.meazza.instagram.ui.auth.reset_password.ResetPasswordFragment"
        android:label="fragment_reset_password"
        tools:layout="@layout/fragment_reset_password" />

    <fragment
        android:id="@+id/navigation_feed"
        android:name="com.meazza.instagram.ui.feed.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed">
        <action
            android:id="@+id/goto_camera"
            app:destination="@id/destination_camera" />
        <action
            android:id="@+id/goto_messages"
            app:destination="@id/destination_direct" />
    </fragment>
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.meazza.instagram.ui.searching.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/navigation_add_post"
        android:name="com.meazza.instagram.ui.add_post.AddPostFragment"
        android:label="fragment_add_post"
        tools:layout="@layout/fragment_add_post" />
    <fragment
        android:id="@+id/navigation_notification"
        android:name="com.meazza.instagram.ui.notification.NotificationFragment"
        android:label="fragment_notification"
        tools:layout="@layout/fragment_notification" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.meazza.instagram.ui.user_profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/next_action"
            app:destination="@id/destination_edit_profile" />
    </fragment>
    <fragment
        android:id="@+id/destination_camera"
        android:name="com.meazza.instagram.ui.camera.CameraFragment"
        android:label="fragment_camera"
        tools:layout="@layout/fragment_camera" />
    <fragment
        android:id="@+id/destination_direct"
        android:name="com.meazza.instagram.ui.direct_message.DirectFragment"
        android:label="fragment_messages"
        tools:layout="@layout/fragment_direct">
        <action
            android:id="@+id/next_action"
            app:destination="@id/destination_chat" />
    </fragment>
    <fragment
        android:id="@+id/destination_chat"
        android:name="com.meazza.instagram.ui.direct_message.chat.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" />
    <fragment
        android:id="@+id/destination_edit_profile"
        android:name="com.meazza.instagram.ui.user_profile.edit_profile.EditProfileFragment"
        android:label="fragment_edit_profile"
        tools:layout="@layout/fragment_edit_profile" />
</navigation>