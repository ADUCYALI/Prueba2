<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.welcome.WelcomeFragment">

    <ImageView
        android:id="@+id/iv_instagram_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_instagram_logo"
        app:layout_constraintBottom_toTopOf="@+id/btn_create_new_account"
        app:layout_constraintEnd_toEndOf="@+id/btn_create_new_account"
        app:layout_constraintStart_toStartOf="@+id/btn_create_new_account" />

    <Button
        android:id="@+id/btn_create_new_account"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/background_button_blue"
        android:text="@string/create_new_account"
        android:theme="@style/ButtonBlueStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/log_in"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_create_new_account"
        app:layout_constraintStart_toStartOf="@+id/btn_create_new_account"
        app:layout_constraintTop_toBottomOf="@+id/btn_create_new_account" />
</androidx.constraintlayout.widget.ConstraintLayout>